<div class="container">
    <h4 class="py-1 my-5 text-center text-white bg-primary">LISTA DE DISPOSTIVOS REGISTRADOS EN LA BASE DE DATOS
    </h4>
    <div class="border py-4 px-4 my-5">
        <table class="table table-striped table-bordered table-sm table-hover">
            <thead>
                <tr>
                    <th scope="col" class="table-column-title text-center">#</th>
                    <th scope="col" class="table-column-title text-center">DISPOSITIVO</th>
                    <th scope="col" class="table-column-title text-center">MARCA</th>
                    <th scope="col" class="table-column-title text-center">FAMILIA</th>
                    <th scope="col" class="table-column-title text-center">MODELO</th>
                    <th scope="col" class="table-column-title text-center">ARQUITECTURA</th>
                    <th scope="col" class="table-column-title text-center">CAPACIDAD</th>
                    <th scope="col" class="table-column-title text-center">FRECUENCIA</th>
                    <th scope="col" class="table-column-title text-center">SEGMENTO</th>
                    <th scope="col" class="table-column-title text-center">OPCIONES</th>
                </tr>
            </thead>
            <tbody>
                {{#dispositivos}}
                <tr>
                    <th scope="row" class="table-row-content text-center">{{this.IDDISPOSITIVO}}</th>
                    {{#familiadsp}}
                    <td class="table-row-content text-center">{{this.catalogodsp.DISPOSITIVO}}</td>
                    <td class="table-row-content text-center">{{this.marca.MARCA}}</td>
                    <td class="table-row-content text-center">{{this.FAMILIA}}</td>
                    {{/familiadsp}}
                    <td class="table-row-content text-center">{{this.MODELO}}</td>
                    {{#familiadsp}}
                    <td class="table-row-content text-center">{{this.ARQUITECTURA}}</td>
                    {{/familiadsp}}
                    <td class="table-row-content text-center">{{this.UCAP}} {{this.ucapc.UNIDAD}}</td>
                    <td class="table-row-content text-center">{{this.UFREQ}} {{this.ufreq.UNIDAD}}</td>
                    {{#familiadsp}}
                    <td class="table-row-content text-center">{{this.catalogoeqp.TIPOEQP}}</td>
                    {{/familiadsp}}

                    <td class="table-row-content">
                        <a href="/dispositivo/editar/{{this.IDDISPOSITIVO}}" class="btn btn-sm btn-outline-dark"> Editar
                            <i class="fas fa-edit"></i></a>
                    </td>
                </tr>
                {{/dispositivos}}
            </tbody>
        </table>
        <a href="/dispositivo/crear" class="btn btn-sm btn-primary form-button-title"> Crear Dispositivo <i
                class="fas fa-plus-square"></i></a>
        <a href="/familiadsp/listar" class="btn btn-sm btn-outline-dark form-button-title"> Ir a Familias de Dispositivo
            <i class="fas fa-plus-square"></i></a>

    </div>
</div>