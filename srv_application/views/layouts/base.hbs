    <script>
        $(document).ready(function () {
            listar();
        })

        var listar = function () {
            var url = 'http://localhost:4800/familiadsp/api/listar';

            var table = $('#tablaFamilias').DataTable({
                "ajax": {
                    "url": url,
                    "dataSrc": ""
                },
                "columns": [
                    { "data": "IDFAMILIADSP" },
                    { "data": "DISPOSITIVO" },
                    { "data": "MARCA" },
                    { "data": "FAMILIA" },
                    { "data": "ARQUITECTURA" },
                    { "data": "TIPOEQP" },
                    { "defaultContent": "<button id='escogerFila' type='button' class='escoger btn btn-sm btn-outline-primary'>Escoger</button>" }
                ],
            });

            obtener_data("#tablaFamilias tbody", table);
        }

        var obtener_data = function (tbody, table) {
            $(tbody).on("click", "button.escoger", function () {
                var data = table.row($(this).parents("tr")).data();
                console.log(data);
                $("#idfamiliadsp").val(data.IDFAMILIADSP);
                $("#familia").val(data.FAMILIA + " - " + data.ARQUITECTURA);
            });
        }

    </script>

