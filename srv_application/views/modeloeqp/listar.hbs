<div class="container">
    <h4 class="py-1 my-5 text-center text-white bg-dark">
        LISTA DE MODELOS DE EQUIPOS REGISTRADOS EN LA BASE DE DATOS
    </h4>
    <div class="border py-4 px-4 my-5">
        <table class="table table-striped table-bordered table-sm table-hover">
            <thead>
                <tr>
                    <th scope="col" class="table-column-title">#</th>
                    <th scope="col" class="table-column-title">MODELO</th>
                    <th scope="col" class="table-column-title">MARCA</th>
                    <th scope="col" class="table-column-title">DETALLE</th>
                    <th scope="col" class="table-column-title">TIPOEQP</th>
                    <th scope="col" class="table-column-title">OPCIONES</th>
                </tr>
            </thead>
            <tbody>
                {{#each modelos}}
                <tr>
                    <th scope="row" class="table-row-content">{{this.IDMODELO}}</th>
                    <td class="table-row-content">{{this.MODELO}}</td>
                    <td class="table-row-content">{{this.marca.MARCA}}</td>
                    <td class="table-row-content">{{this.DETALLE}}</td>
                    <td class="table-row-content">{{this.catalogoeqp.TIPOEQP}}</td>
                    <td class="table-row-content">
                        <a href="/modelo/editar/{{this.IDMODELO}}" class="btn btn-sm btn-outline-dark"> Editar <i
                                class="fas fa-edit"></i></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <a href="/modelo/crear" class="btn btn-sm btn-outline-primary form-button-title"> Crear Modelo de Equipo <i
                class="fas fa-plus-square"></i></a>

    </div>
</div>